<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content">

	<TextView
		android:id="@+id/message_text_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginBottom="@dimen/message_margin_vertical"
		android:layout_marginLeft="@dimen/message_margin_horizontal"
		android:layout_marginRight="@dimen/message_margin_horizontal"
		android:layout_marginTop="@dimen/message_margin_vertical"
		android:gravity="start"
		android:padding="@dimen/message_padding"
		android:textSize="@dimen/message_text_size"
		app:layout_marginRightPercent="@fraction/message_margin_percent"/>

	<TextView
		android:id="@+id/message_text_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="@dimen/message_margin_vertical"
		android:layout_marginLeft="@dimen/message_margin_horizontal"
		android:layout_marginRight="@dimen/message_margin_horizontal"
		android:layout_marginTop="@dimen/message_margin_vertical"
		android:gravity="end"
		android:padding="@dimen/message_padding"
		android:textSize="@dimen/message_text_size"
		app:layout_marginLeftPercent="@fraction/message_margin_percent"/>

</android.support.percent.PercentRelativeLayout>
